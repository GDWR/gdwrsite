---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
export interface Props {
	content: {
		title: string;
		description: string;
		publishDate?: string;
		updatedDate?: string;
		heroImage?: string;
	};
}

let x;

const {
	content: { title, description, publishDate, updatedDate, heroImage },
} = Astro.props as Props;

---

<Header />

<main>
	<article class="text-gray-700 container mx-auto flex flex-col items-center">
		
		<a class="lg:w-3/6 md:w-4/6 w-full mb-10 object-cover object-center"  href={heroImage}>
			<img class="rounded mx-auto" src={heroImage} alt="" />
		</a>

		<div class="flex flex-col items-center divide-y">

			<div class="">
				<h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900">{title}</h1>
				{publishDate && <time>{publishDate}</time>}
				{updatedDate && <div>Last updated on <time>{updatedDate}</time></div>}
			</div>

			<div class="w-3/5 p-10">
				<slot/>
			</div>

		</div>

	</article>
</main>


<Footer />
